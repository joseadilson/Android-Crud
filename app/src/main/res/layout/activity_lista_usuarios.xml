<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lista_usuarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jose.crud_cadastro.ListaUsuariosActivity">

    <ListView
        android:id="@+id/lstUsuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:onClick="onClickCadastrar"
        android:src="@drawable/ic_add_white"
        app:layout_anchor="@id/lstUsuarios"
        app:backgroundTint="@color/colorAccent"
        android:layout_gravity="right|bottom|end"/>

</FrameLayout>
